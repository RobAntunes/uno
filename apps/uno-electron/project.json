{
  "name": "uno-electron",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/uno-electron/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx-electron:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/uno-electron",
        "main": "apps/uno-electron/src/main.ts",
        "tsConfig": "apps/uno-electron/tsconfig.app.json",
        "assets": [
          "apps/uno-electron/src/assets"
        ],
        "externalDependencies": "none",
        "webpackConfig": "apps/uno-electron/webpack.config.js"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/uno-electron/src/environments/environment.ts",
              "with": "apps/uno-electron/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "compile-services": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/uno-electron/services"],
      "options": {
        "command": "mkdir -p dist/apps/uno-electron/services/indexing && node_modules/.bin/tsc apps/uno-electron/src/services/indexing/*.ts --outDir dist/apps/uno-electron/services/indexing --module esnext --moduleResolution bundler --target es2022 --skipLibCheck --sourceMap"
      }
    },
    "build-all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run uno-electron:compile-services",
          "nx run uno-electron:build"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx serve uno",
          "wait-on http://localhost:4201 && nx run uno-electron:build-all && electron dist/apps/uno-electron/main.js"
        ],
        "parallel": true
      }
    },
    "package": {
      "executor": "nx-electron:package",
      "options": {
        "name": "uno-electron",
        "frontendProject": "uno",
        "sourcePath": "dist/apps",
        "outputPath": "dist/packages",
        "prepackageOnly": true
      }
    },
    "make": {
      "executor": "nx-electron:make",
      "options": {
        "name": "uno-electron",
        "frontendProject": "uno",
        "sourcePath": "dist/apps",
        "outputPath": "dist/executables"
      }
    },
    "lint": {
      "command": "eslint apps/uno-electron/**/*.ts"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/uno-electron/jest.config.ts"
      }
    }
  }
}
