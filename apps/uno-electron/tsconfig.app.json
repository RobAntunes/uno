{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/uno-electron",
    "types": ["node"],
    "composite": true,
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": ["**/*.ts", "../../libs/indexing/src/**/*.ts"],
  "references": [
    {
      "path": "../../libs/indexing"
    }
  ]
}
